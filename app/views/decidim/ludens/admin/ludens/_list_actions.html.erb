<div class="card cell small-3 card-recommandation card-<%= title %>">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
    </h2>
  </div>
  <div class="grid-container recommendation-firstContainer float-left">
    <div class="cell small-12 grid-x recommendation-container">
      <ul class="list-actions-uncompleted cell small-4">
        <% recommendations.each do |recommendation| %>
            <li> <a target="_blank" href="<%=recommendation.documentation %>"><%= recommendation.translated_recommendation %> </a></li>
        <% end %>
      </ul>

      <ul class="list-actions-completed cell small-4"p>
        <% recommendationsDone.each do |recommendation| %>
          <li class="no-bullet"> <a target="_blank" href="<%=recommendation.documentation %>"><%= recommendation.translated_recommendation %> </a></li>
        <% end %>
      </ul>
      <a class="cell small-1" id="openModal<%= title %>" data-open="exampleModal<%= title %>"><%= t "decidim.admin.assistant.seeMore" %></a>
    </div>
  </div>
  <div class="reveal" id="exampleModal<%= title %>" data-reveal>
    <div class="grid-x">
      <ul class="modal-actions-uncompleted">
        <% recommendationsTotal.each do |recommendation| %>
          <li> <a target="_blank" href="<%=recommendation.documentation %>"><%= recommendation.translated_recommendation %> </a><span class="recommendation-points"> <%= recommendation.points %> <%= t("decidim.admin.assistant.points") %></span> </li>
        <% end %>
      </ul>

      <ul class="modal-actions-completed">
        <% recommendationsDoneTotal.each do |recommendation| %>
          <li class="no-bullet"> <a target="_blank" href="<%=recommendation.documentation %>"><%= recommendation.translated_recommendation %> </a> <span class="recommendation-points"> <%= recommendation.points %> <%= t("decidim.admin.assistant.points") %></span></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
