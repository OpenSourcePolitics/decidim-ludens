<div class="recap_assistant grid-y float-left">
  <div class="assistant_values grid-y">
    <div class="grid-x assistant_container">
      <h3 class="assistant_level letter_spaced"><b> <%= t "decidim.admin.assistant.level" %> <%= current_user.level %> </b></h3>
      <input type=hidden name="level_up_message" id="level-up-message" value="<%= t("decidim.admin.assistant.levelMessage") %> <%= current_user.level %>"/>
      <input type=hidden name="level_up" id="level-up" value="<%= "TODO : Handle level up" %>"/>
      <h5 class="assistant_score"><%= current_user.score %>/<%= Decidim::Ludens::ParticipativeActions.instance.level_points[current_user.level-1] %></h5>
    </div>
    <div class="progress">
      <input class="paliers" type="hidden" value="<%= Decidim::Ludens::ParticipativeActions.instance.level_points %>"/>
      <div class="color progress_bar"></div>
    </div>
  </div>
  <%= image_tag ActionController::Base.helpers.asset_pack_path("media/images/badge"+current_user.level.to_s+".png"), class: "card__image avatar float-center badge-level-"+current_user.level.to_s, alt: "avatar" %>
</div>
