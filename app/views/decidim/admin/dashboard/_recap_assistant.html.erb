<div class="recap_assistant grid-y float-left">
  <div class="assistant_values grid-y">
    <div class="grid-x assistant_container">
      <h3 class="assistant_level letter_spaced">
        <%= t "decidim.admin.assistant.level", level: participative_actions_level(current_user) %>
      </h3>
      <input type=hidden
             name="level_up_message"
             id="level-up-message"
             value="<%= t("decidim.admin.assistant.levelMessage", level: participative_actions_level(current_user)) %>"
        />
      <input type=hidden name="level_up" id="level-up" value="<%= "TODO : Handle level up" %>"/>
      <h5 class="assistant_score"><%= participative_actions_score(current_user) %>
        /<%= participative_actions_level_points(current_user) %></h5>
    </div>
    <div class="progress">
      <input class="paliers" type="hidden" value="<%= participative_actions_level_points %>"/>
      <div class="color progress_bar"></div>
    </div>
  </div>
  <%= image_tag ActionController::Base.helpers.asset_pack_path("media/images/badge#{participative_actions_level(current_user)}.png"),
                class: "card__image avatar float-center badge-level-#{participative_actions_level(current_user)}",
                alt: "avatar" %>
</div>
