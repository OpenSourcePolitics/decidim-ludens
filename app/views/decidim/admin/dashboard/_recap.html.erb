<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t("decidim.admin.assistant.title") %>
    </h2>
  </div>
  <div class="table-scroll grid-x">
    <%= render(partial: "decidim/admin/dashboard/recap_assistant") %>
    <div class="assistant_recommendations">
      <div>
        <h3 class="letter_spaced"><b> <%= t("decidim.admin.assistant.recommendations") %> </b></h3>
        <ul class="list-recommendations-uncompleted">
          <% if last_completed %>
            <li class="recommendation no-bullet">
              <a target="_blank" href="<%= last_completed.participative_action.documentation %>">
                <%= last_completed.participative_action.translated_recommendation %>
              </a>
              <span class="recommendation-points"><%= t("decidim.admin.assistant.points", points: last_completed.points) %></span>
            </li>
          <% end %>
          <% participative_actions_recommendations(current_user).each do |recommendation| %>
            <li class="recommendation bulleted">
              <a target="_blank" href="<%= recommendation.documentation %>">
                <%= recommendation.translated_recommendation %>
              </a>
              <span class="recommendation-points"><%= t("decidim.admin.assistant.points", points: recommendation.points) %></span>
            </li>
          <% end %>
        </ul>
      </div>
      <% if withKnowMore %>
        <a href="/admin/ludens"> <%= t "decidim.admin.assistant.knowMore" %></a>
      <% end %>
    </div>
  </div>
</div>
