<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t("decidim.admin.assistant.title") %>
    </h2>
  </div>
  <div class="table-scroll grid-x">
    <%= render(
          partial: "decidim/admin/dashboard/recap_assistant"
        ) %>
    <div class="assistant_recommendations">
      <div>
        <h3 class="letter_spaced"> <b>Recommendations</b> </h3>
        <ul class="list-recommendations-uncompleted">
          <% if Decidim::ParticipativeAssistant::ParticipativeAction.last_done_recommendation %>
            <li class="recommendation no-bullet"> <a href="<%= Decidim::ParticipativeAssistant::ParticipativeAction.last_done_recommendation.documentation %>"><%= Decidim::ParticipativeAssistant::ParticipativeAction.last_done_recommendation.recommendation %></a> <span class="recommendation-points"> <%= Decidim::ParticipativeAssistant::ParticipativeAction.last_done_recommendation.points %> pts</span></li>
          <% end %>
          <% Decidim::ParticipativeAssistant::ParticipativeAction.recommendations.each do |recommendation| %>
            <li class="recommendation bulleted"> <a href="<%= recommendation.documentation %>"><%= recommendation.recommendation %></a><span class="recommendation-points"> <%= recommendation.points %> pts</span></li>
          <% end %>
        </ul>
      </div>
      <% if withKnowMore %>
        <a href="/admin/participative_assistant"> <%= t "decidim.admin.assistant.knowMore" %></a>
      <% end %>
    </div>
  </div>
</div>
