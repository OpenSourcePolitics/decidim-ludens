<% add_decidim_page_title(t("decidim.admin.titles.dashboard")) %>
<%= stylesheet_pack_tag "decidim_participative_assistant", media: "all" %> <!--TODO Move to head-->
<%= javascript_pack_tag "decidim_participative_assistant", media: "all" %> <!-- TODO Move to head -->
<h1 class="card-title">
  <%= t "decidim.admin.assistant.title" %>
</h1>
<h3>
  <%= t "decidim.admin.assistant.intro" %>
</h3>

<div class="content">

  <div class="grid-x grid-margin-x">
    <div class="cell small-6">
      <%= render(partial: "decidim/admin/dashboard/recap",
                 locals: {
                   withKnowMore: false
                 }) %>
    </div>
    <div class="cell small-6">
      <%= render(partial: "decidim/participative_assistant/admin/participative_assistant/levelsGrid") %>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <% list_of_participative_actions.each do |participative_action| %>
      <div class="cell small-6">
        <%= render(
              partial: "list_actions",
              locals: {
                title: t(".#{participative_action.key}"),
                recommendations: participative_action.values[:uncompleted].first(5),
                recommendationsDone: participative_action.values[:completed].first(5),
                recommendationsTotal: participative_action.values[:uncompleted],
                recommendationsDoneTotal: participative_action.values[:completed]
              }
            ) %>
      </div>
    <% end %>
  </div>
</div>
</div>
