<div class="card cell small-3 card-recommandation card-<%= title %>">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
    </h2>
  </div>
  <div class="grid-x recommendation-firstContainer float-left">
    <div class="cell small-8 grid-x recommendation-container">
      <ul class="list-actions-uncompleted cell small-5">
        <% recommendations.each do |recommendation| %>
          <li> <a href="<%=recommendation.documentation %>"><%= recommendation.recommendation %> </a></li>
        <% end %>
      </ul>

      <ul class="list-actions-completed cell small-5">
        <% recommendationsDone.each do |recommendation| %>
          <li class="no-bullet"> <a href="<%=recommendation.documentation %>"><%= recommendation.recommendation %> </a></li>
        <% end %>
      </ul>
    </div>
      <a class="cell small-1" id="openModal<%= title %>" data-open="exampleModal<%= title %>"><%= t "decidim.admin.assistant.seeMore" %></a>
  </div>
  <div class="reveal" id="exampleModal<%= title %>" data-reveal>
    <div class="grid-x">
      <ul class="modal-actions-uncompleted">
        <% recommendationsTotal.each do |recommendation| %>
          <li> <a href="<%=recommendation.documentation %>"><%= recommendation.recommendation %> </a> </li>
        <% end %>
      </ul>

      <ul class="modal-actions-completed">
        <% recommendationsDoneTotal.each do |recommendation| %>
          <li class="no-bullet"> <a href="<%=recommendation.documentation %>"><%= recommendation.recommendation %> </a> </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>